<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% @articles.each do |article| %>
        <article class="list-group-item  border-0">
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p class="content"> <%= article.content.truncate(250, omission: '...') %> </p>
        </article>
      <% end %>
    </div>
  </div>
  <hr>
</div>
